{
  "name": "telegram-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Telegram integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:handlers": "jest tests/unit/handlers",
    "test:utils": "jest tests/unit/utils",
    "test:config": "jest tests/unit/config",
    "test:ci": "jest --coverage --watchAll=false",
    "verify:setup": "node scripts/test-setup.js",
    "verify:mcp": "node scripts/test-mcp.js",
    "verify:search": "node scripts/test-search.js",
    "verify:all-tools": "node scripts/test-all-tools.js",
    "verify:performance": "node scripts/performance-tests.js",
    "verify:stress": "node scripts/stress-tests.js"
  },
  "keywords": [
    "mcp",
    "telegram",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^17.2.1",
    "prebuilt-tdlib": "^0.1008051.0",
    "readline": "^1.3.0",
    "tdl": "^7.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
